{
    "id": "nodebb-plugin-launchandlearn",
    "name": "NodeBB Launch and Learn Plugin",
    "description": "NodeBB Plugin that allows the Launch and Learn LMS to be notified of posts.",
    "url": "https://bitbucket.org/spongeuk/nodebb-plugin-notify-on-post",
    "library": "./index.js",
    "hooks": [
        {
            "hook": "action:post.save",
            "method": "postSubmitted"
        },
        {
            "hook": "action:notification.pushed",
            "method": "notificationPushed"
        },
        {
            "hook": "filter:messaging.save",
            "method": "messageSent"
        }
    ]
}